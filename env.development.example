# =================================
# PERCY TECH - DEVELOPMENT ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env and update values as needed

# =================================
# DATABASE CONFIGURATION (MySQL - Core Platform)
# =================================
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=percytech_dev
DB_USER=percytech
DB_PASS=password
DB_ROOT_PASSWORD=root_password

# =================================
# SUPABASE CONFIGURATION (Admin & Lead Management)
# =================================
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# =================================
# MINIO (LOCAL S3) CONFIGURATION
# =================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# AWS S3 Configuration (for local dev, point to MinIO)
AWS_ID=minioadmin
AWS_SECRET=minioadmin123
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME_FILES=percytech-files
AWS_S3_PRIVATE_URL_DURATION=3600

# =================================
# APPLICATION CONFIGURATION
# =================================
PORT=8080
BASE_URL=http://localhost:8080
NODE_ENV=development

# =================================
# AUTHENTICATION & SECURITY
# =================================
COOKIE_SECRET=dev-cookie-secret-change-for-production
COOKIE_MAX_AGE=86400000

# Token TTLs (in seconds)
TTL_RECOVERY_PASS_TOKEN=3600
TTL_EMAIL_CONFIRM_TOKEN=86400

# =================================
# EMAIL CONFIGURATION (Use MailHog for local dev)
# =================================
MAILER_CONTACT_HOST=localhost
MAILER_CONTACT_PORT=1025
MAILER_CONTACT_EMAIL=dev@percytech.local
MAILER_CONTACT_USER=dev
MAILER_CONTACT_PASS=dev
NOTIFICATIONS_EMAIL=notifications@percytech.local
NEW_MESSAGES_EMAIL=messages@percytech.local

# =================================
# BANDWIDTH/TELEPHONY CONFIGURATION
# =================================
# Add your Bandwidth credentials here
BANDWIDTH_USER=your-bandwidth-username
BANDWIDTH_PASSWORD=your-bandwidth-password
BANDWIDTH_API_TOKEN=your-api-token
BANDWIDTH_API_SECRET=your-api-secret
BANDWIDTH_ACCOUNT_ID=your-account-id
BANDWIDTH_APPLICATION_ID=your-app-id
BANDWIDTH_SITE_ID=your-site-id
BANDWIDTH_SIP_PEER_ID=your-sip-peer-id
BANDWIDTH_MOCK_SERVER=true

# =================================
# VOICE CONFIGURATION
# =================================
VOICE_HOST=localhost
VOICE_USER=dev-voice-user
KEY_NAME=dev-key

# =================================
# OTHER SETTINGS
# =================================
SUBSCRIPTION_PERIOD=30
SUPPORT_FIRST_NAME=Support
SUPPORT_LAST_NAME=Team
SUPPORT_CELL_PHONE=+1234567890
MESSAGES_QUEUE_NAME=messages-queue
MESSAGES_INCOMING_QUEUE_NAME=incoming-messages-queue

# =================================
# DOCKER SERVICE PORTS
# =================================
ADMINER_PORT=8083
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# =================================
# AWS CLOUDWATCH (Optional for local dev)
# =================================
AWS_CLOUDWATCH_GROUP=percytech-local
AWS_CLOUDWATCH_STREAM_MESSAGE_FAILED=message-failed
AWS_CLOUDWATCH_STREAM_APP=app
AWS_CLOUDWATCH_STREAM_CLIENT_ERRORS=client-errors
